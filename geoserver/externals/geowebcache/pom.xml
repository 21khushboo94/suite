<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <!-- set parent pom to community pom -->
  <parent>
    <groupId>org.opengeo.geoserver</groupId>
    <artifactId>externals</artifactId>
    <version>2.3-SNAPSHOT</version>
  </parent>

  <groupId>org.opengeo.geoserver.externals</groupId>
  <artifactId>geowebcache</artifactId>
  <packaging>pom</packaging>
  <name>OpenGeo Suite GeoWebCache External</name>

  <build>
   <plugins>
     <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
        <echo message="pulling in sources (ignore fatal warning)"/>
        <exec executable="git" failonerror="false">
            <arg line="clone -n git://github.com/GeoWebCache/geowebcache.git repo"/>
        </exec>
        <exec executable="git" dir="repo" failonerror="true">
            <arg line="pull origin master"/>
        </exec>
        <exec executable="git" dir="repo" failonerror="true">
            <arg line="checkout 845d8b5b92ac01458054ed8a887b5a5998512d57"/>
        </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
            <echo message="${mvn.set} -DskipTests clean install"/>
        <exec executable="${mvn.exec}" dir="repo/geowebcache" failonerror="true">
            <arg line="${mvn.set} -DskipTests clean install"/>
        </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>

          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
 
  <profiles>
    <profile>
      <id>settings</id>
      <activation>
       <property>
         <name>mvn.settings</name>
       </property>
      </activation>
      <properties> 
         <mvn.set>-s ${mvn.settings}</mvn.set>
      </properties> 
    </profile>
  </profiles>

  <properties>
    <mvn.exec>mvn</mvn.exec>
    <mvn.set></mvn.set>
  </properties>

</project>
